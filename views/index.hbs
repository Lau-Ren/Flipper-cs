	<div class="row">
	  <div class="twelve columns">
			<form action="/" method="post">

				<input id="input-field "type="text" name="text" placeholder="Enter text here..."></input>
				<input type="submit" value="Submit"></input>	
			</form>
			
	  </div>
	  
	</div>

	<div class="row">
	  <div class="twelve columns">
			<p>{{flippedStr}}</p>
	  </div>
	  
	</div>

	<div class="row">
		<div id="about">
			<p>about</p>

		</div>

	</div>


	<div class="row">
		<div id="twitter-stream" >
			{{#each tweets}}
				<img class="tweet-profile-img" src="{{user.profile_image_url_https}}">
